<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:drawable/dialog_holo_light_frame"
    android:backgroundTintMode="screen">


    <RelativeLayout
        android:id="@+id/ll01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rl04"
        android:layout_alignParentBottom="false"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignTop="@+id/rl04"
        android:background="@color/colorToolbarBlue"
        android:orientation="vertical">


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btnGallery"
            android:layout_width="36dp"
            android:layout_height="36dp"

            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:contentDescription="@string/todo"
            android:visibility="gone"
            app:backgroundTint="@color/colorToolbarBlue"
            app:fabSize="mini"
            app:srcCompat="@drawable/ic_photo_album_white_24dp" />


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btnCamera"
            android:layout_width="36dp"
            android:layout_height="36dp"

            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:contentDescription="@string/todo"
            android:visibility="invisible"
            app:backgroundTint="@color/colorToolbarBlue"
            app:fabSize="mini"
            app:srcCompat="@drawable/ic_add_a_photo_white_24dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btnMedia"
            android:layout_width="36dp"
            android:layout_height="36dp"

            android:layout_margin="10dp"
            android:contentDescription="@string/todo"
            app:backgroundTint="@color/colorToolbarBlue"
            app:fabSize="mini"
            app:srcCompat="@drawable/media_32dp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rl02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_toEndOf="@+id/ll01"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvDU_ID"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="@string/todo"
            android:visibility="gone" />


        <TextView
            android:id="@+id/tvDU_PTYPE"
            style="@android:style/Widget.Material.ListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/todo"
            android:textColor="@android:color/black"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll04"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/rl02"
        android:layout_margin="10dp"
        android:layout_toEndOf="@+id/ll01"
        android:orientation="horizontal">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll04"


        android:layout_toEndOf="@+id/ll01"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvDU_FNAME"
            style="@android:style/Widget.Material.ListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/todo"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvDU_MI"
            style="@android:style/Widget.Material.ListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/todo"
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvDU_LNAME"
            style="@android:style/Widget.Material.ListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/todo"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:visibility="gone" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl04"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll03"
        android:orientation="horizontal">

    </RelativeLayout>
</RelativeLayout>