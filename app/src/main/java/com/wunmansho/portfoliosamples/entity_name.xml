<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tvXX_ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        android:visibility="gone" />


    <RelativeLayout
        android:id="@+id/ll02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--
            First Name
            -->
        <TextView
            android:id="@+id/tvXX_FNAME"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:elevation="0dp"
            android:gravity="top"
            android:labelFor="@+id/tieXX_FNAME"
            android:text="@string/tv0001"
            android:textAlignment="gravity"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/bullHornFnameOff"
            android:layout_width="24dp"
            android:layout_height="24dp"

            android:layout_alignEnd="@+id/tvXX_FNAME"
            android:layout_alignParentEnd="false"
            android:layout_marginEnd="5dp"
            android:backgroundTint="@color/white"
            android:contentDescription="@string/todo"
            android:tint="@color/colorToolbarBlue"
            app:srcCompat="@drawable/ic_bullhorn_black_r_off24dp" />

        <ImageButton
            android:id="@+id/bullHornFnameOn"
            android:layout_width="24dp"
            android:layout_height="24dp"

            android:layout_alignEnd="@+id/tvXX_FNAME"
            android:layout_alignParentEnd="false"
            android:layout_marginEnd="5dp"
            android:backgroundTint="@color/white"
            android:contentDescription="@string/todo"
            android:tint="@color/colorToolbarBlue"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_bullhorn_black_r_on24dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:elevation="0dp"
            android:gravity="top"
            android:labelFor="@+id/tieXX_MI"
            android:text="@string/tv0002"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:elevation="0dp"
            android:gravity="top"
            android:labelFor="@+id/tieXX_LNAME"
            android:text="@string/tv0003"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:visibility="gone" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll02"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/tieXX_FNAME"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"

            android:layout_weight=".4"

            android:inputType="textCapWords|textMultiLine|textPersonName"
            android:paddingTop="0dp"
            android:textAlignment="viewStart"
            android:textSize="12sp" />


        <EditText
            android:id="@+id/tieXX_MI"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".1"

            android:inputType="text|textCapWords|textPersonName"
            android:paddingTop="0dp"
            android:textAlignment="viewStart"
            android:textSize="12sp"
            android:visibility="gone" />


        <EditText
            android:id="@+id/tieXX_LNAME"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginEnd="10dp"
            android:layout_weight=".4"
            android:inputType="textCapWords|textPersonName"
            android:paddingTop="0dp"
            android:textAlignment="viewStart"
            android:textSize="12sp"
            android:visibility="gone" />


    </LinearLayout>


</RelativeLayout>